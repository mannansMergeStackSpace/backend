{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["index.ts", "src/**/*.ts", "tests/**/*.spec.ts"],
  "files": ["index.ts"]
}
